!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt*termName:             screen-256color
URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.internalBorder:       0
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true
URxvt*font:                 xft:InputMonoCompressed Light:style=Medium,Regular:size=11,\
                            xft:DroidSansMonoForPowerline Nerd Font:style=Medium:size=12,\
                            xft:Unifont:style=Medium:pixelsixe=11
URxvt*boldFont:             xft:InputMonoCompressed Medium:style=Medium,Regular:size=11,\
                            xft:DroidSansMonoForPowerline Nerd Font:style=Medium:size=12:bold,\
                            xft:Unifont:style=Medium:pixelsixe=11:bold

! Fix font space (breaks fallback fonts)
!URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-lib:             /usr/local/lib/urxvt/perl
URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select
URxvt.matcher.button:       1
URxvt.url-select.launcher:  firefox
URxvt.url-select.underline: true
URxvt.matcher.rend.0:       Uline Bold fg5
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search


! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

URxvt.scrollBar: false
URxvt.scrollBar_right: true
URxvt.scrollColor: #FD971F
URxvt.troughColor: #000000

! URxvt.cursorBlink: true
! URxvt.cursorColor: #FD971F

URxvt.intensityStyles: false

